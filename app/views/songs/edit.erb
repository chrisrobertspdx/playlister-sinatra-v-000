<h1>Edit Song!</h1>
<form action="/songs/<%= @song.slug %>" method="post">
<input id="hidden" type="hidden" name="_method" value="patch">
Song Name: <input type="text" name="song[name]" value="<%= @song.name %>" id="song_name">
Artist Name: <input type="text" name="song[artist][name]" value="<%= @song.artist.name %>" id="artist_name">
<h3>Genres</h3>
<% Genre.all.each do |genre| %>
  <input <%= "checked" if @song.genres.include?(genre) %>
    id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>">
<% end %>
<input type="submit" value="Edit">
</form>
